<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <appender name="preimportdicomprocessor" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${xnat.home}/logs/xnat-preimportdicom-plugin.log</file>
        <encoder>
            <pattern>%d [%t] %-5p %c - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${xnat.home}/logs/xnat-preimportdicom-plugin.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <logger name="au.edu.uwa.wanif.plugins.preimportprocessor" additivity="false" level="INFO">
        <appender-ref ref="preimportprocessor"/>
    </logger>
</configuration>
